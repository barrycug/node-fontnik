#!/usr/bin/env node

var fontnik = require('../index.js');
var path = require('path');
var fs = require('fs');
var queue = require('queue-async');
var argv = require('minimist')(process.argv.slice(2));

if (argv._.length !== 2) {
    console.log('Usage:');
    console.log('  build-glyphs <fontstack> <output dir>');
    console.log('');
    console.log('Example:');
    console.log('  build-glyphs "Open Sans Regular, Arial Unicode MS Regular" glyphs/');
    process.exit(1);
}

var fontstack = argv._[0];
var dir = path.resolve(argv._[1]);
var bitmap = argv.bitmap === 'false' ? false : true;

if (!fs.existsSync(dir)) {
    console.warn('Error: Directory %s does not exist', dir);
    process.exit(1);
}

var q = queue(Math.max(4, require('os').cpus()));
var queue = [];
for (var i = 0; i < 65534; (i = i + 256)) {
    q.defer(writeGlyphs, {
        fontstack: fontstack,
        start: i,
        end: Math.min(i + 255, 65533),
        bitmap: bitmap
    });
}

q.defer(writeRects, {
    fontstack: fontstack
});

function writeGlyphs(opts, done) {
    fontnik.range(opts, function(err, zdata) {
        if (err) {
            console.warn(err.toString());
            process.exit(1);
        }
        fs.writeFileSync(dir + '/' + opts.start + '-' + opts.end + '.pbf', zdata);
        done();
    });
}

function writeRects(opts, done) {
    fontnik.rects(opts, function(err, zdata) {
        if (err) {
            console.warn(err.toString());
            process.exit(1);
        }
        fs.writeFileSync(dir + '/rects.pbf', zdata);
        done();
    });
}
